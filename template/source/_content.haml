.entry
  %article#post-id
    %header
      .entry-date
        %time.entry-date{datetime:'2014-02-02'}=lorem.date
      %a{href: '#'}
        %h3=lorem.sentence
    =image_tag 'content_image.jpg', class: 'img-responsive'
    .entry-summary
      %p=lorem.paragraph
      .meta-nav
    %footer
      .more-link.pull-right
        =link_to 'Read Full Article'
