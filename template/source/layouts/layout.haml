%html
  %head
    %meta{content: 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible'}
    %meta{charset: 'utf-8'}
    %title=current_page.data.title || ''
    %meta{name: 'description', content: ''}
    %meta{name: 'author', content: ''}

    :plain
        <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

    %link{href: '/stylesheets/all.css', type: 'text/css', rel: 'stylesheet' }

  %body{class: page_classes}

    %nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle{type: 'button', data: {toggle: 'collapse', target: '#main-menu'}}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar


        .collapse.navbar-collapse#main-menu
          %ul.menu-link.nav.navbar-nav
            %li.active=link_to 'Home', '#'
            %li=link_to 'About', '#'
            %li=link_to 'Blog', '#'
            %li=link_to 'Competition', '#'
            %li=link_to 'Login', '#'
          %ul.nav.navbar-nav.navbar-right.social-icons
            %li
              %a{href: "#"}
                %span.fa-stack.fa-lg
                  %i.fa.fa-circle.fa-stack-2x
                  %i.fa.fa-twitter.fa-stack-1x.fa-inverse
            %li
              %a{href: "#"}
                %span.fa-stack.fa-lg
                  %i.fa.fa-circle.fa-stack-2x
                  %i.fa.fa-facebook.fa-stack-1x.fa-inverse
            %li
              %a{href: "#"}
                %span.fa-stack.fa-lg
                  %i.fa.fa-circle.fa-stack-2x
                  %i.fa.fa-google-plus.fa-stack-1x.fa-inverse
            %li
              %a{href: "#"}
                %span.fa-stack.fa-lg
                  %i.fa.fa-circle.fa-stack-2x
                  %i.fa.fa-pinterest.fa-stack-1x.fa-inverse
            %li
              %a{href: "#"}
                %span.fa-stack.fa-lg
                  %i.fa.fa-circle.fa-stack-2x
                  %i.fa.fa-instagram.fa-stack-1x.fa-inverse


    .container
      = yield

      = partial 'layouts/footer'