%html
  %head
    %meta{content: 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible'}
    %meta{charset: 'utf-8'}
    %title=current_page.data.title || ''
    %meta{name: 'description', content: ''}
    %meta{name: 'author', content: ''}

    :plain
        <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

    %link{href: '/stylesheets/all.css', type: 'text/css', rel: 'stylesheet' }

  %body{class: page_classes}

    %nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle{type: 'button', data: {toggle: 'collapse', target: '#main-menu'}}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar


        .collapse.navbar-collapse#main-menu
          %ul.nav.navbar-nav
            %li.active=link_to 'Home', '#'
            %li=link_to 'About', '#'
            %li=link_to 'Blog', '#'
            %li=link_to 'Competition', '#'
            %li=link_to 'Login', '#'

    .container
      = yield

    / Placed at the end of the document so the pages load faster
    %script{type: 'text/javascript', src: 'javascripts/all.js'}